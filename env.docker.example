# Docker Environment Configuration for OrcaClubPro
# Copy this file to .env for Docker deployments

# Application Environment
NODE_ENV=production
PORT=3000

# Database Configuration
DATABASE_URI=file:./data/payload.db

# Payload CMS Configuration
PAYLOAD_SECRET=your-super-secret-key-change-this-in-production

# Next.js Configuration
NEXT_TELEMETRY_DISABLED=1
HOSTNAME=0.0.0.0

# Bun Runtime Configuration
USE_BUN_RUNTIME=true

# Build Configuration
SKIP_MIGRATIONS=false
VERBOSE=false

# Security (Optional - for production deployments)
# JWT_SECRET=your-jwt-secret
# PAYLOAD_PUBLIC_SERVER_URL=https://your-domain.com

# External Services (if needed)
# SMTP_HOST=smtp.your-provider.com
# SMTP_PORT=587
# SMTP_USER=your-email@domain.com
# SMTP_PASS=your-smtp-password

# Analytics (Optional)
# GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Storage (if using cloud storage)
# AWS_S3_BUCKET=your-bucket-name
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key 